doctype html
html
  head
    title=title
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel="stylesheet" href='/style.css')
  body
    header
      img.logo(src='/buzzer-logo.svg')

    div.container
      h2.js-active=`${users.length} joined`
      ol.js-buzzes
        each buzz in buzzes
          li=`${buzz.name} on Team ${buzz.team}`
      button.js-activate='Activate buzzers'
      button.js-incorrect='Incorrect Answer!'
      button.js-clear='Correct Answer!\n(clear buzzes)'
      button.js-deactivate='Deactivate buzzers'
      button.js-reset.secondary='Reset game'

    script(src='/socket.io/socket.io.js')
    script(src='/host.js')
